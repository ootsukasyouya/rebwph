<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "stores/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :パスワード %> <i>(変更しない場合は空白にしてください)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> 文字以上</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :パスワードをもう１度入力してください =%><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :現在のパスワード %> <i>(変更内容を確認するため、現在のパスワードが必要です)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="field">
    <%= f.label :店舗名 %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :プロフィール %>
    <%= f.text_area :profile %>
  </div>
  <div class="field">
    <%= f.label :駅名 %>
    <%= f.text_field :station_name %>
  </div>

  <div class="field">
    <%= f.label :住所 %>
    <%= f.text_area :address %>
  </div>
  <div class="field">
    <%= f.label :電話番号 %>
    <%= f.telephone_field :phone_number %>
  </div>
  <div class="field">
    <%= f.label :働き方 %>
    <%= f.select :how_to_work, Store.how_to_works.keys.map {|k| [I18n.t("enums.store.how_to_work.#{k}"), k]} %>
  </div>
  <div class="field">
    <%= f.label :稼ぎ方 %>
    <%= f.select :how_to_earn, Store.how_to_earns.keys.map {|k| [I18n.t("enums.store.how_to_earn.#{k}"), k]} %>
  </div>
  <div class="field">
    <%= f.label :募集待遇 %>
    <%= f.select :treatment, Store.treatments.keys.map {|k| [I18n.t("enums.store.treatment.#{k}"), k]} %>
  </div>
  <div class="field">
    <%= f.label :行き方 %>
    <%= f.select :go_to_work, Store.go_to_works.keys.map {|k| [I18n.t("enums.store.go_to_work.#{k}"), k]} %>
  </div>
  <div class="field">
    <%= f.label :スキル %>
    <%= f.select :skill, Store.skills.keys.map {|k| [I18n.t("enums.store.skill.#{k}"), k]} %>
  </div>
  <div class="field">
    <%= f.label :給与 %>
    <%= f.select :salary, Store.salaries.keys.map {|k| [I18n.t("enums.store.salary.#{k}"), k]} %>
  </div>
  <div class="field">
    <%= f.label :時間帯 %>
    <%= f.select :time_zone, Store.time_zones.keys.map {|k| [I18n.t("enums.store.time_zone.#{k}"), k]} %>
  </div>
  <div class="field">
    <%= f.label :雰囲気 %>
    <%= f.select :atmosphere, Store.atmospheres.keys.map {|k| [I18n.t("enums.store.atmosphere.#{k}"), k]} %>
  </div>
  <div class="field">
    <%= f.label :年齢層 %>
    <%= f.select :age_group, Store.age_groups.keys.map {|k| [I18n.t("enums.store.age_group.#{k}"), k]} %>
  </div>
  <div class="field">
    <%= f.label :県名 %>
    <%= f.select :prefecture_name, Store.prefecture_names.keys.map {|k| [I18n.t("enums.store.prefecture_name.#{k}"), k]} %>
  </div>
  <div class="field">
    <%= f.label :駅から歩いて何分 %>
    <%= f.select :station_on_foot, Store.station_on_foots.keys.map {|k| [I18n.t("enums.store.station_on_foot.#{k}"), k]} %>
  </div>


  <div class="actions">
    <%= f.submit "更新" %>
  </div>
<% end %>

<p><%= button_to "アカウントの削除", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
